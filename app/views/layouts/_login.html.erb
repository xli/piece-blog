<% if current_user %>
<h5>
  <%= current_user.email %> (<%= current_user.role %>)
  <%= form_tag('/logout', style: 'display: inline') do |f| %>
    <%= submit_tag 'Logout' %>
  <% end %>
</h5>
<% else %>
  <%= form_tag('/login') do |f| %>
    <%= text_field_tag :email, '', :placeholder => 'Email' %>
    <%= submit_tag 'Login' %>
  <% end %>
<% end %>
